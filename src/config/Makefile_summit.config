#
# Summit config file
# ------------------------------------------------------------------

# REQUIRED LIBRARIES
# =================================
#

#
# MPI
#
NVCC_WRAPPER_DEFAULT_COMPILER = ${OLCF_XLC_ROOT}/bin/xlc++_r
CXX = ${MPI_ROOT}/bin/mpic++
MPIEXEC = jsrun
MPI_NP = --np=

#
# requires parallel NETCDF
# ---------------------------------
NETCDF_ROOT = ${OLCF_PARALLEL_NETCDF_ROOT}
NETCDF_FLAGS = -L$(NETCDF_ROOT)/lib -lpnetcdf #-lhdf5 -lhdf5_hl -lz 
NETCDF_INC_FLAGS = -I$(NETCDF_ROOT)/include

#
# requires ELM datasets
# ---------------------------------
ELM_UTILS_DIR = cime_utils

# this library
ELM_FLAGS = -L$(ELM_ROOT) -lelm
ELM_INC_FLAGS = -I$(ELM_ROOT)

